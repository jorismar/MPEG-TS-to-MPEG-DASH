#include "./include/buffer.h"

int main() {
    Buffer* buffer = new Buffer(5, 1);
    char word[] = {'l', 'a', 'v', 'i', 'x'};
    int i;
    char c = 'd';
    
    for(i = 0; i < 5; i++)
        buffer->add(&word[i]);
    
    buffer->write(4, &c);
    
    for(i = 0; i < 4; i++)
        printf("%c", *buffer->next());
        
    buffer->read(2);
    
    printf("\n%c", *buffer->remove(0));
    
    return 0;
}
