#include "../include/buffer.h"

Buffer::Buffer(int size, int elem_size) {
    Buffer::r_pos = 0;
    Buffer::w_pos = 0;
    Buffer::buff_size = size;
    Buffer::elem_size = elem_size;
    Buffer::buffer = (tElement*) malloc(sizeof(char) * size * elem_size);
}

Buffer::~Buffer() {
    // VAZIO
}

tElement Buffer::next() {
    return Buffer::buffer[r_pos++ % Buffer::buff_size];
}

tElement Buffer::read(int indice) {
    return indice >= 0 && indice < Buffer::buff_size ? Buffer::buffer[indice] : NULL;
}

void Buffer::add(tElement elem) {
    Buffer::buffer[w_pos++ % Buffer::buff_size] = elem;
}

int Buffer::write(int indice, tElement elem) {
    if(indice >= 0 && indice < Buffer::buff_size) {
        Buffer::buffer[indice] = elem;
        return 0;
    }
    
    return 1;
}

tElement Buffer::remove(int indice) {
    tElement elem = NULL;
    
    if(indice >= 0 && indice < Buffer::buff_size) {
        elem = Buffer::buffer[indice];
        Buffer::buffer[indice] = NULL;
    }
    
    return elem;
}